[database]
DATABASE_ENGINE = django.db.backends.postgresql_psycopg2
DATABASE_HOST = {{ .Env.DB_HOST }}
DATABASE_PORT = {{ .Env.DB_PORT }}
DATABASE_NAME = {{ .Env.DB_NAME }}
DATABASE_USER = {{ .Env.DB_USER }}
DATABASE_PASSWORD = {{ .Env.DB_PASSWORD }}

[plugins]
ACTIVATED_PLUGINS={{ .Env.WEB_BB_ACTIVATED_PLUGINS }}

[testing]
# Приложение(я) или плагин(ы), по которым нужно запускать тесты, можно прописывать список через запятую.
# В них должна быть директория tests_{plugin_name}, например: salary/tests_salary или salary.education/tests_salary_education
TESTING_PLUGINS = accounting, salary

[accounting]
CHECK_PPP_CONSISTENCY = False
LOG_ENTRY_RULE_SAVING = False

[web_bb]
ENABLE_AUTO_ONE_TO_ONE_FIELD_FUNCTIONALITY = False

#==============================================================================
# Настройки factory_bo
# =============================================================================
[factory_bo]
# Директория для хранения фикстур
FIXTURES_DIR_PATH=/tmp/
# Исключаемые из обработки приложения
EXCLUDED_APPS = admin_panel, asynch, authtoken, copy_manager, creadoc, datalogging, django_celery_results, eav, feedback, lock_monitor, m3_audit, m3_mutex, merge_records, message, operating_systems, plugins_dispatcher, replisync, scheduler, sessions, web_bb.core.stored_settings, waterfall, django_cron
